In short (example for Debian):

$ sudo apt-get install \
  libblitz0-dev \
  gcc-snapshot \
  pypy \
  python-numpy \
  gnuplot-iostream \
  clang \
  linux-tools \
  time

$ cmake . \ 
  -DCMAKE_CXX_COMPILER=/usr/lib/gcc-snapshot/bin/g++ \
  -DCMAKE_Fortran_COMPILER=/usr/lib/gcc-snapshot/bin/gfortran 

$ make

$ cmake . \ 
  -DCMAKE_CXX_COMPILER=clang++ \
  -DCMAKE_Fortran_COMPILER=/usr/lib/gcc-snapshot/bin/gfortran 

$ make

$ cd tests/sanity
$ make test

$ cd tests/timing
$ ./inout.sh
$ cd ../../
$ cmake .
$ cd tests/timing
$ make test
$ gnuplot plot.gpi
